@model Blogum.Models.Uye

@{
    ViewBag.Title = "UyeProfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.KullaniciAdi</h2>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Yetki")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Yetki.Yetki1)
        </dd>

        <dt>
            @Html.DisplayName("Kullanıcı Adı")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KullaniciAdi)
        </dd>

        <dt>
            @Html.DisplayName("Email")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>


        <dt>
            @Html.DisplayName("Ad Soyad")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AdSoyad)
        </dd>

        <dt>
            @Html.DisplayName("Profil Resmi")
        </dt>

        <dd>
            <img src="@Model.Foto" class="img-circle" alt="@Model.AdSoyad"/>
        </dd>

    </dl>

    <h4>Son Eklediği Makaleler</h4>
    <div class="col-md-8">
        <ul>
            @foreach (var item in Model.Makales.OrderByDescending(x => x.Tarih).Take(5))
            {
                <li><a href="/Home/MakaleDetay/@item.MakaleId">@item.Baslik</a></li>
            }
        </ul>
    </div>
</div>

