@model IEnumerable<Blogum.Models.Uye>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<p>
    @Html.ActionLink("Üye Oluştur", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Yetki
        </th>
        <th>
            Kullanıcı Adı
        </th>
        <th>
            Email
        </th>
       
        <th>
            Ad Soyad
        </th>
        <th>
            Resim
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Yetki.Yetki1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KullaniciAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.AdSoyad)
        </td>
        <td>
            <img src="@item.Foto" alt="@item.KullaniciAdi" width="70" />
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.UyeId }) |
            @Html.ActionLink("Detay", "Details", new { id=item.UyeId }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.UyeId })
        </td>
    </tr>
}

</table>
