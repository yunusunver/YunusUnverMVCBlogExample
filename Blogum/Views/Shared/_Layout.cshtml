<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Yunus Ünver</title>
    <!-- Bootstrap core CSS -->

    <link href="~/Content/Blog/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom styles for this template -->

    <link href="~/Content/Blog/css/blog-home.css" rel="stylesheet" />
    <link href="~/Content/Admin/css/sb-admin.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"></script>

    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">Yunus Ünver</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/Home/Index">
                            Anasayfa
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Hakkımızda">Hakkımızda</a>
                    </li>
                 
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Iletisim">İletişim</a>
                    </li>


                  

                    <li class="nav-item">

                        <ul class="nav navbar-nav navbar-right top-nav">
                            <li class="dropdown nav-item">
                                <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
                                    <i class="fa fa-user"></i>
                                    @if (Session["uyeid"] != null)
                                    {@Session["kullanıcıadı"].ToString()}
                                else
                                {
                                    <font>İşlemler</font>
                                }
                                    <b class="caret"></b>
                                </a>

                                <ul class="dropdown-menu">
                                    @if (Session["uyeid"] != null)
                                    {
                                        <li class="divider"></li>
                                        <li>
                                            <a href="/Uye/Index/@Session["uyeid"]" style="color:black"><i class="fa fa-fw fa-user"></i>Profil</a>
                                        </li>
                                        <li>
                                            <a href="#" style="color:black"><i class="fa fa-fw fa-envelope"></i> Inbox</a>
                                        </li>

                                        if (Convert.ToInt32(Session["yetkiid"]) == 1)
                                        {
                                            <li>
                                                <a href="/Admin/Index" target="_blank" style="color:black"><i class="fa fa-fw fa-gear"></i> Admin</a>
                                            </li>
                                        }
                                        <li class="divider"></li>
                                        <li>
                                            <a href="/Uye/LogOut" style="color:black"><i class="fa fa-fw fa-power-off"></i>  Çıkış</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="divider"></li>
                                        <li>
                                            <a href="/Uye/Login" style="color:black"><i class="fa fa-fw fa-arrow-right" ></i>Giriş</a>
                                        </li>
                                        <li>
                                            <a href="/Uye/Create" style="color:black"><i class="fa fa-fw fa-user-circle" ></i>Kayıt</a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        </ul>

                    </li>



                </ul>
            </div>
        </div>
    </nav>
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <!-- Blog Entries Column -->
            <div class="col-md-8">

                @RenderBody()

            </div>
            <!-- Sidebar Widgets Column -->
            <div class="col-md-4 ">
                <!-- Search Widget -->
                <div class="card my-4 text-white bg-dark mb-3 ">

                    @Html.Partial("~/Views/Home/BlogAraPartial.cshtml")

                </div>
                <!-- Categories Widget -->
                <div class="card my-4 ">
                    <h5 class="card-header">Kategoriler</h5>
                    <div class="card-body">
                        @{
                            Html.RenderAction("KategoriPartial", "Home");
                        }
                    </div>
                </div>
                <!-- Side Widget -->
                <div class="card my-4">
                    
                    
                        @{
                            Html.RenderAction("SonYorumlarPartial", "Home");
                        }
                    
                </div>

                <div class="card my-4">
                    <h5 class="card-header">Populer Makaleler</h5>
                    <div class="card-body">
                        @{
                            Html.RenderAction("PopulerMakalelerPartial", "Home");
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
    <!-- Footer -->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Yunus Ünver - @DateTime.Now.Year</p>
        </div>
        <!-- /.container -->
    </footer>
    <!-- Bootstrap core JavaScript -->
    <script src="~/Content/Blog/vendor/jquery/jquery.min.js"></script>
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"></script>
    <script src="~/Content/Blog/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

</body>
</html>
